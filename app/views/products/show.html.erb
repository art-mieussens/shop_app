<h1>Detalles de producto</h1>

<table>
	<tr><td>Proveedor:</td><td><%= @product.supplier.name %></td></tr>
	<tr>
		<% unless params[:product_category_id]%>
			<td>Categoría:</td>
			<td><%= @product.product_category.name %></td>
		<% end %>
	</tr>
	<tr><td>Código:</td><td><%= @product.code %></td></tr>
	<tr><td>Descripción:</td><td><%= @product.description %></td></tr>
	<tr><td>C. Barras:</td><td><%= @product.bar_code %></td></tr>
	<tr><td>IVA:</td><td><%= @product.vat ? @product.vat : "18" %>%</td></tr>	
	<tr><td>¿Para la venta?:</td><td><%= @product.for_sale %></td></tr>
	<tr>
		<td>Editar:</td>
		<td><%= link_to image_tag("icons/edit.png", :alt => "Editar"), edit_product_path(@product) %></td>
	</tr>
</table>
<br />
Transformación:
	<% unless @product.product_transformation %>
		<%= link_to image_tag("icons/transform.png", :alt => "Añadir transformación"), product_product_transformation_path(@product), :method => :post, :confirm => "¿Desea crear una nueva transformación para este producto?" %>
	<% else %>
		<%= link_to image_tag("icons/transform.png", :alt => "Mostrar transformación"), product_product_transformation_path(@product) %>
	<% end %>
<br />
<br />
Movimientos: <%= link_to image_tag("icons/moving.png", :alt => "Movimientos"), product_inventory_movements_path(@product) %><br />

